<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="invoice_email_cron" model="ir.cron">
            <field name="name">CRM Lead Email Reminders</field>
            <field name="model_id" ref="model_crm_lead" />
            <field name="state">code</field>
            <field name="code">model.send_email_reminder()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="datetime.now(pytz.timezone('UTC')).strftime('%Y-%m-%d 12:30:00')" />
            <field name="priority" eval="5" />
            <field name="doall" eval="False" />
        </record>
    </data>
</odoo>